<Window x:Class="CppIDE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="C++ IDE" Height="450" Width="525">
    <Grid>
        <TextBox Name="CodeEditor" HorizontalAlignment="Left" VerticalAlignment="Top" Width="480" Height="150" Margin="10" AcceptsReturn="True"/>
        <Button Content="Run" Name="RunButton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="30" Margin="10,170,0,0" Click="RunButton_Click"/>
        <TextBox Name="OutputBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="480" Height="150" Margin="10,210,0,0" AcceptsReturn="True" IsReadOnly="True"/>
        <TextBox Name="UserNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="480" Height="30" Margin="10,380,0,0"  Visibility="Collapsed"/>
        <Button Content="Submit Name" Name="SubmitNameButton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="30" Margin="10,420,0,0" Visibility="Collapsed" Click="SubmitNameButton_Click"/>
        <TextBlock Name="MessageTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Width="480" Height="30" Margin="10,370,0,0" Text="Enter your name and click Submit" />
    </Grid>
</Window>
